{
  "compilerOptions": {
      "module": "CommonJS",
      "noImplicitAny": true,
      "sourceMap": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "baseUrl": "./src",
      "lib": [
        "dom",
        "es2016",
        "es2017.object"
      ],
      "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
